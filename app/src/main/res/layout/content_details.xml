<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mzdhr.bookstoreinventoryapp.ui.DetailsActivity"
    tools:showIn="@layout/activity_details"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/pen_edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_edit"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            style="@style/LabelStyleMaterial"
            />

        <EditText
            android:id="@+id/product_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputStyleMaterial"
            android:inputType="text"
            android:enabled="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            style="@style/LabelStyleMaterial"
            />

        <EditText
            android:id="@+id/product_price_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputStyleMaterial"
            android:inputType="number"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            style="@style/LabelStyleMaterial"
            />

        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/product_quantity_edit_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/InputStyleMaterial"
                android:inputType="number"
                android:layout_weight="4"
                android:enabled="false"/>

            <Button
                android:id="@+id/product_quantity_minus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:textStyle="bold"
                style="@style/ButtonStyle"
                android:enabled="false"/>
            <Button
                android:id="@+id/product_quantity_plus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"
                android:textStyle="bold"
                style="@style/ButtonStyle"
                android:enabled="false"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier Name"
            style="@style/LabelStyleMaterial"
            />

        <EditText
            android:id="@+id/supplier_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputStyleMaterial"
            android:inputType="text"
            android:enabled="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier Phone"
            style="@style/LabelStyleMaterial"
            />

        <EditText
            android:id="@+id/supplier_phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputStyleMaterial"
            android:inputType="phone"
            android:enabled="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier E-Mail"
            style="@style/LabelStyleMaterial"
            />

        <EditText
            android:id="@+id/supplier_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/InputStyleMaterial"
            android:inputType="textEmailAddress"
            android:enabled="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="32dp"
            android:gravity="center">

            <Button
                android:id="@+id/order_more_product_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="order more from supplier"
                style="@style/ButtonStyle"
                />

            <Button
                android:id="@+id/delete_product_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete this product"
                style="@style/ButtonStyle"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
