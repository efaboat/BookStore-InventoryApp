<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <TextView
            android:id="@+id/product_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Invisible"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorProductName"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/product_quantity_text_view"
            android:layout_below="@id/product_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="33"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/colorProductName"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/product_price_text_view"
            android:layout_below="@id/product_quantity_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="108 $"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/colorProductName"
            android:fontFamily="sans-serif"
            />

        <Button
            android:id="@+id/product_sell_button"
            android:layout_below="@id/product_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sell 1 piece"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>